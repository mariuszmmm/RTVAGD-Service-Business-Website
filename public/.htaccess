<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Przekierowanie HTTP do HTTPS
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # Przekierowanie WWW do bez WWW
  RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
  RewriteRule ^(.*)$ https://naprawaprzemysl.pl/$1 [L,R=301]

  # Przekierowania ze starych URL-i na nowe URL-e
  RewriteRule ^o-nas$ https://naprawaprzemysl.pl/o-mnie [L,R=301]

  # Przekierowanie wszystkich żądań do index.html (SPA)
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>